<Page x:Class="ProductManagerApplication.Pages.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductManagerApplication.Pages"
      mc:Ignorable="d" 
      DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=AddProductViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Елемент добавлен" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            
            <Button Content="Добавить продукт в коризну" Width="Auto" Margin="10" Command="{Binding AddProductToBasket}" IsEnabled="{Binding AddButtomIsEnable}"/>

            <Button Content="Просмотреть корзину" Width="Auto" Margin="10" Command="{Binding ShowBasket}"/>
            
        </StackPanel>

        <Frame Content="{Binding MemberProductTrackPage}"  NavigationUIVisibility="Hidden"  Grid.Row="1"/>

    </Grid>
</Page>
